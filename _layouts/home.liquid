---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if site.title == 'blank' %}
        <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
        {{ site.last_name }}
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>
    <p class="desc">{{ page.subtitle }}</p>
  </header>

  <article>
    {% if page.profile %}
      <div class="profile float-{% if page.profile.align == 'left' %}left{% else %}right{% endif %}">
        {% if page.profile.image %}
          {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
          {% if page.profile.image_circular %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
          {% else %}
            {% assign profile_image_class = 'img-fluid z-depth-1
      rounded' %}
          {% endif %}
          {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.6}}px, (min-width: 576px)
      60vw, 95vw"{% endcapture %}
          {%
            include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=page.profile.image
            cache_bust=true zoomable=true 
          %}
        {% endif %}
        {% if page.profile.more_info %}
          <div class="more-info">{{ page.profile.more_info }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="clearfix">{{ content }}</div>

    <!-- Pinned Post -->
    {% assign pinned_posts = site.posts | where: "pinned_to_home", true %}
    {% if pinned_posts.size > 0 %}
      {% assign pinned_post = pinned_posts.first %}
      {% assign pinned_url = pinned_post.redirect | default: pinned_post.url %}
      {% assign is_external = false %}
      {% if pinned_post.redirect contains '://' %}
        {% assign is_external = true %}
      {% endif %}
      {% include notice.liquid icon="fa-solid fa-thumbtack" link_url=pinned_url link_text=pinned_post.title date=pinned_post.date external=is_external %}
    {% endif %}
    
    <!-- Lab Carousels -->
    <div class="lab-carousels my-5">
      <!-- Software List (replaces carousel) -->
      {%
        include thumbnailed_list.liquid
        title="Open Source Software"
        title_url="/softwares/"
        items=site.softwares
        show_title=false
        featured_only=true
        more_url="/softwares/"
        more_label="See all software"
      %}

      <!-- Projects Carousel with auto-advance -->
      {%
        include carousel.liquid
        id="projectsCarousel"
        title="Research Projects"
        title_url="/projects/"
        items=site.projects
        auto_advance=false
        interval=10
        more_url="/projects/"
        more_label="See all projects"
      %}

      <!-- Community Highlights Carousel -->
      {% assign highlights_posts = site.posts | where_exp: 'p', 'p.categories contains "highlights"' %}
      {%
        include carousel.liquid
        id="highlightsCarousel"
        title="Community Highlights"
        title_url="/highlights/"
        items=highlights_posts
        more_url="/highlights/"
        more_label="See all highlights"
      %}
    </div>

    <!-- Latest posts -->
    {% if page.latest_posts and page.latest_posts.enabled %}
      <div class="home-section mb-5">
        <h2>
          <a href="{{ '/blog/' | relative_url }}" style="color: inherit">Latest News and Posts</a>
        </h2>
        {% include latest_posts.liquid %}
        <div class="mt-3">
          <a class="btn btn-sm btn-primary" href="{{ '/blog/' | relative_url }}">
            See all posts
          </a>
        </div>
      </div>
    {% endif %}

    <!-- News -->
    {% if page.announcements and page.announcements.enabled %}
      <div class="home-section mb-5">
        <h2>
          <a href="{{ '/news/' | relative_url }}" style="color: inherit">news</a>
        </h2>
        {% include news.liquid limit=true %}
        <div class="mt-3">
          <a class="btn btn-sm btn-primary" href="{{ '/news/' | relative_url }}">
            See all news
          </a>
        </div>
      </div>
    {% endif %}

    <!-- Selected papers -->
    {% if page.selected_papers %}
      <div class="home-section mb-5">
        <h2>
          <a href="{{ '/papers/' | relative_url }}" style="color: inherit">Recent Publications</a>
        </h2>
        {% include selected_papers.liquid %}
        <div class="mt-3">
          <a class="btn btn-sm btn-primary" href="{{ '/papers/' | relative_url }}">
            See all publications
          </a>
        </div>
      </div>
    {% endif %}

    <hr
    <!-- Social -->
    {% if page.social %}
      <div class="social">
        <div class="contact-icons">{% include social.liquid %}</div>

        <div class="contact-note">{{ site.contact_note }}</div>
      </div>
    {% endif %}

    {% if site.newsletter and site.newsletter.enabled and site.footer_fixed %}
      {% include newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>
